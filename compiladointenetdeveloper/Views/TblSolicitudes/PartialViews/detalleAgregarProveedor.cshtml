@model iveCincoFrame.Models.TblProveedores



<div class="container-fluid">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        @Html.Label("Nombre Proveedor", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-12">
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        @Html.Label("NIT", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-12">
            @Html.EditorFor(model => model.nit, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nit, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        @Html.Label("Tipo Contribuyente", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-12">
            @Html.DropDownList("idCatClasificacionFacturas", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idCatClasificacionFacturas, "", new { @class = "text-danger" })
        </div>
    </div>
</div>