@model iveCincoFrame.Models.TblCertificacionesTecnicos

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-12">
        <div>
            <div class="card">
                <div class="card-body">
                    <div class="my-3">

                        <div id="transac-directorios" class="col-12">

                            <div class="row">
                                <div class="mb-3"><button type="button" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("Index/"+@ViewBag.idTblGirasTecnicos, "TblCertificacionesTecnicos")'" style="box-shadow: 0 0.15rem 1.75rem 0 rgb(33 40 50 / 15%); background: #0c4899 !important;"><i class="align-middle me-2 fas fa-fw fa-arrow-alt-circle-left"></i></button></div>
                                <div class="card-actions bg-success-dark text-white"><i class="align-middle me-2 fas fa-fw fa-exclamation-triangle"></i> Nueva Certificación</div>

                                <div class="col-xl-12 card" style="box-shadow: 0 0.15rem 1.75rem 0 rgb(33 40 50 / 15%);">
                                    <div class="card-body">
                                        <h3>Detalles del Documento</h3>
                                        @using (Html.BeginForm())
                                        {

                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <!-- Form Row-->
                                            <div class="row gx-3">
                                                <div class="col-md-4">
                                                    @Html.Label("Sucursal", new { @class = "form-label" })
                                                    @Html.DropDownList("idCatUbicaciones", null, htmlAttributes: new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.idCatUbicaciones, "", new { @class = "text-danger" })
                                                </div>
                                                <!-- Form Group (organization name)-->
                                                <div class="col-md-4">
                                                    @Html.Label("Estado de la Sucrusal", new { @class = "form-label" })
                                                    @Html.DropDownListFor(m => m.idCatEstadosTecnicos, ViewBag.idCatEstadosTecnicoslg1 as SelectList, "Seleccione una opcion", new { @class = "form-select" })
                                                </div>
                                                <!-- Form Group (organization name)-->
                                                <div class="col-md-4">
                                                    <label>idTblGirasTecnicos</label>
                                                    @Html.DropDownList("idTblGirasTecnicos", null, htmlAttributes: new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <!-- Form Row-->
                                            <div class="row gx-3">
                                                <!-- Form Group (organization name)-->
                                                <div class="col-md-12">
                                                    @Html.Label("Observaciones", new { @class = "form-label" })
                                                    @Html.TextAreaFor(model => model.comentarios, new { @class = "form-control", @rows = "3", @placeholder = "Comentarios acerca de la certificacion" })
                                                </div>
                                            </div>
                                            <div class="container mt-2">
                                                <div class="row">
                                                    <div class="col text-center">
                                                        <button type="submit" class="btn btn-primary btn-lg" value="Create"> <i class="fa-solid fa-floppy-disk"></i> Guardar Registro</button>
                                                    </div>
                                                </div>
                                            </div>

                                        }
                                    </div>

                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#idCatUbicaciones').select2();
    });
</script>