@model IEnumerable<iveCincoFrame.Models.Modulos.TblModulosDto>
<div class="d-flex justify-content-between mb-2">
    <div class="mb-3"><button type="button" class="btn btn-primary btn-lg" id="agregar-modulo" style="background: #153d77 !important;">Agregar Modulo</button></div>
    <h1>Modulos</h1>
    <p class="text-white">.</p>
</div>
<table id="tblsucursales" class="table table-striped table-bordered table-sm" style="width:100%">
    <thead class="table-dark">
        <tr>
            <td>#</td>
            <td>SubModulos</td>
            <td class="d-none">idTblModulos</td>
            <td>descripcion</td>
            <td>Control Registros</td>
            <td>estado</td>
            <td>titulo</td>
            <td>icono</td>
            <td>orden</td>
            <td>tarjet</td>
            <td>Acciones</td>
        </tr>
    </thead>
    <tbody>
        @{var iterador = 1;}
        @foreach (var item in Model)
        {
            <tr>
                <td>@iterador</td>
                <td><a class="btn btn-primary"  href="@Url.Action("Index", "SubModulos", new { id = item.idTblModulos })">Sub Mdulos</a></td>
                <td class="d-none">@Html.DisplayFor(modelItem => item.idTblModulos)</td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="align-middle me-2 fas fa-fw fa-stream"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <div class="dropdown-item">@Html.DisplayFor(modelItem => item.descripcion)</div>
                            </li>
                        </ul>
                    </div>

                </td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="align-middle me-2 fas fa-fw fa-user-cog"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <div class="dropdown-item"><i class="align-middle me-2 fas fa-fw fa-genderless"></i>Fecha Creacion:  @Html.DisplayFor(modelItem => item.fechaCreacion)</div>
                                <div class="dropdown-item"><i class="align-middle me-2 fas fa-fw fa-genderless"></i> Usuario Alta:  @Html.DisplayFor(modelItem => item.usuarioCrea)</div>
                                <div class="dropdown-item"><i class="align-middle me-2 fas fa-fw fa-genderless"></i> Fecha Modificacion:  @Html.DisplayFor(modelItem => item.fechaModificacion)</div>
                                <div class="dropdown-item"><i class="align-middle me-2 fas fa-fw fa-genderless"></i> Usuario Modifica:  @Html.DisplayFor(modelItem => item.usuarioModifica)</div>
                            </li>
                        </ul>
                    </div>
                </td>
                <td>@Html.DisplayFor(modelItem => item.estado)</td>
                <td>@Html.DisplayFor(modelItem => item.titulo)</td>
                <td><i class="@Html.DisplayFor(modelItem => item.icono)"></i></td>
                <td>@Html.DisplayFor(modelItem => item.orden)</td>
                <td>@Html.DisplayFor(modelItem => item.tarjet)</td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-warning dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="align-middle me-2 fas fa-fw fa-wrench"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li><button class="dropdown-item" id="editar-modulo" codigoModulo="@item.idTblModulos"><span><i class="align-middle me-2 fas fa-fw fa-pen"></i></span>Editar</button></li>
                            <li><button class="dropdown-item" id="eliminar-modulo" codigoModulo="@item.idTblModulos"><span><i class="align-middle me-2 fas fa-fw fa-minus-circle"></i></span>Desactivar</button></li>
                        </ul>
                    </div>
                </td>
            </tr>
            iterador++;
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#tblsucursales').DataTable({
            language: {
                "decimal": "",
                "emptyTable": "No hay información",
                "info": "",
                "infoEmpty": "",
                "infoFiltered": "",
                "infoPostFix": "",
                "thousands": ",",
                "lengthMenu": "",
                "loadingRecords": "Cargando...",
                "processing": "Procesando...",
                "search": "Buscar:",
                "zeroRecords": "Sin resultados encontrados",
                "paginate": {
                    "first": "Primero",
                    "last": "Ultimo",
                    "next": "Siguiente",
                    "previous": "Anterior"
                }
            },
            responsive: true
        });
    });
</script>

