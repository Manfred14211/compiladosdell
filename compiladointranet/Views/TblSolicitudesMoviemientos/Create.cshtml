@model iveCincoFrame.Models.TblSolicitudesMoviemientos

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layaut_Intranet.cshtml";
}

<h2>Create</h2>

<div>
    @using (Html.BeginForm("Create", "TblSolicitudesMoviemientos",FormMethod.Post))
    {
        <h4>TblSolicitudesCooitzas</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row px-1 px-sm-1 px-md-12 px-lg-12">
            <div class="col-12 col-sm-12  col-md-4 col-lg-4">
                @Html.Label("Gerencia", new { @class = "form-label" })
                <div class="input-group input-group-lg mb-3">
                    <span class="input-group-text">
                        <i class="align-middle me-2 fas fa-fw fa-users"></i>
                    </span>
                    @Html.DropDownList("idGerencia", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="col-12 col-sm-12  col-md-4 col-lg-4">
                @Html.Label("idTblSolicitudesCooitzas", new { @class = "form-label" })
                <div class="input-group input-group-lg mb-3">
                    <span class="input-group-text">
                        <i class="align-middle me-2 fas fa-fw fa-users"></i>
                    </span>
                    @*@Html.DropDownList("idGerencia", null, htmlAttributes: new { @class = "form-select" })*@
                    @Html.DropDownList("idTblSolicitudesCooitzas", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="col-12 col-sm-12  col-md-4 col-lg-4">
                @Html.Label("Proveedor", new { @class = "form-label" })
                <div class="input-group input-group-lg mb-3">
                    <span class="input-group-text">
                        <i class="align-middle me-2 fas fa-fw fa-dolly"></i>
                    </span>
                    @*@Html.TextAreaFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(m => m.idCatProveedoresCooitzas, ViewBag.idCatProveedoresCooitzas as SelectList, "Seleccione una opcion", new { @class = "form-control" })
                    @*@Html.DropDownList("idCatProveedoresCooitzas", null, htmlAttributes: new { @class = "form-select" })*@
                    @*<textarea class="form-control" id="descripcion" name="descripcion" aria-label="With textarea" rows="2" placeholder="Descripción de la Solicitud"></textarea>*@

                </div>
                @Html.ValidationMessageFor(model => model.idCatProveedoresCooitzas, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row px-1 px-sm-1 px-md-12 px-lg-12">
            <div class="col-12 col-sm-12  col-md-4 col-lg-4">
                @Html.Label("Estado de la Solicitud", new { @class = "form-label" })
                <div class="input-group input-group-lg mb-3">
                    <span class="input-group-text">
                        <i class="align-middle me-2 fas fa-fw fa-check-square"></i>
                    </span>
                    @Html.DropDownListFor(m => m.idCatEstadoSolicitudes, ViewBag.idCatEstadoSolicitudes as SelectList, "Seleccione una opcion", new { @class = "form-control" })
                    @*@Html.DropDownList("idCatEstadoSolicitudes", null, htmlAttributes: new { @class = "form-select" })*@
                    @*<textarea class="form-control" id="observacion" name="observacion" aria-label="With textarea" rows="2" placeholder="Observacion de la Solicitud"></textarea>*@

                </div>
                @Html.ValidationMessageFor(model => model.idCatEstadoSolicitudes, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row px-1 px-sm-1 px-md-12 px-lg-12">
            <div class="col-12 col-sm-12  col-md-12 col-lg-12">
                @Html.Label("Descripción", new { @class = "form-label" })
                <div class="input-group input-group-lg mb-3">
                    <span class="input-group-text">
                        <i class="align-middle me-2 fas fa-fw fa-pencil-alt"></i>
                    </span>
                    @*@Html.TextAreaFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control", rows = "2", @readonly = "readonly" } })
                    @*<textarea class="form-control" id="descripcion" name="descripcion" aria-label="With textarea" rows="2" placeholder="Descripción de la Solicitud"></textarea>*@
                </div>
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row px-1 px-sm-1 px-md-12 px-lg-12">
            <div class="col-12 col-sm-12  col-md-4 col-lg-4">
                @Html.Label("Fecha", new { @class = "form-label" })
                <div class="input-group input-group-lg mb-3">
                    <span class="input-group-text">
                        <i class="align-middle me-2 far fa-fw fa-calendar"></i>
                    </span>
                    @*@Html.TextAreaFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })*@
                    @*@Html.DropDownList("idCatProveedoresCooitzas", null, htmlAttributes: new { @class = "form-select" })*@
                    @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", type = "date", value = "dd/mm/yyyy" } })
                    @*<textarea class="form-control" id="descripcion" name="descripcion" aria-label="With textarea" rows="2" placeholder="Descripción de la Solicitud"></textarea>*@

                </div>
                @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
            </div>
            <div class="col-12 col-sm-12  col-md-4 col-lg-4">
                @Html.Label("Fecha Fin", new { @class = "form-label" })
                <div class="input-group input-group-lg mb-3">
                    <span class="input-group-text">
                        <i class="align-middle me-2 far fa-fw fa-calendar-check"></i>
                    </span>
                    @Html.EditorFor(model => model.fechaFin, new { htmlAttributes = new { @class = "form-control", type = "date", value = "dd/mm/yyyy" } })
                    @*@Html.DropDownList("idCatEstadoSolicitudes", null, htmlAttributes: new { @class = "form-select" })*@
                    @*<textarea class="form-control" id="observacion" name="observacion" aria-label="With textarea" rows="2" placeholder="Observacion de la Solicitud"></textarea>*@

                </div>
                @Html.ValidationMessageFor(model => model.fechaFin, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row px-1 px-sm-1 px-md-3 px-lg-4 text-end">
            <div class="col-12 col-sm-12  col-md-12 col-lg-12 align-items-end">
                <div class="btn-group" role="group" aria-label="Basic example">
                    <button type="submit" class="btn btn-primary btn-lg" id="agregar">Agregar <i class="fa-solid fa-check"></i></button>
                </div>
            </div>
        </div>

    }
</div>