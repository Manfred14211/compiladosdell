@model IEnumerable<iveCincoFrame.Models.CatDestinatariosCorreos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-12">
        <div>
            <div class="card">
                <div class="card-body">
                    <div class="my-3">
                        <div id="transac-ubicaiones" class="col-12">
                            <div class="container text-center">
                                <h1 class="text-primary" style="color: #0c4899 !important;">Destinatarios para alertas de Correo</h1>
                                <hr />
                            </div>
                            @Html.Partial("_MensajeParcial")
                            <div class="d-flex justify-content-center justify-content-md-start">
                                <div class="mb-3"><button type="button" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("Create", "DestinatariosCorreos")'" style="box-shadow: 0 0.15rem 1.75rem 0 rgb(33 40 50 / 15%); background: #0c4899 !important;"><i class="align-middle me-2 fas fa-fw fa-plus"></i> Nuevo Destinatario</button></div>
                            </div>
                            <table class="table table-striped table-sm" id="tblDestinatariosCorreos">
                                <thead class="table-dark small">
                                    <tr>
                                        <th>
                                            Correo destino
                                        </th>
                                        <th>
                                            Nombre Completo
                                        </th>
                                        <th>
                                            Fecha de Creacion
                                        </th>
                                        <th>
                                            Fecha de Modificacion
                                        </th>
                                        <th>
                                            Usuario Alta
                                        </th>
                                        <th>
                                            Usuario Modifica
                                        </th>
                                        <th>
                                            Estado
                                        </th>
                                        <th>
                                            Es destinatario principal
                                        </th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.correo)
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Index/"+ item.idCatDestinatariosCorreos,"TblSistemasCorreosDestinatariosCorreos")">@Html.DisplayFor(modelItem => item.nombre)</a>
                                            </td>
                                            <td class="small">
                                                @Html.DisplayFor(modelItem => item.fechaCreacion)
                                            </td>
                                            <td class="small">
                                                @Html.DisplayFor(modelItem => item.fechaModificacion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TblUsuarios.usuario)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TblUsuarios1.usuario)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CatEstados.descripcion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CatOpciones.descripcion)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Editar", "Edit", new { id = item.idCatDestinatariosCorreos }) |
                                                @Html.ActionLink("Desactivar", "DeleteConfirmed", new { id = item.idCatDestinatariosCorreos })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#tblDestinatariosCorreos').DataTable({
            language: {
                "decimal": "",
                "emptyTable": "No hay información",
                "info": "",
                "infoEmpty": "",
                "infoFiltered": "",
                "infoPostFix": "",
                "thousands": ",",
                "lengthMenu": "",
                "loadingRecords": "Cargando...",
                "processing": "Procesando...",
                "search": "Buscar:",
                "zeroRecords": "Sin resultados encontrados",
                "paginate": {
                    "first": "Primero",
                    "last": "Ultimo",
                    "next": "Siguiente",
                    "previous": "Anterior"
                }
            },
            responsive: true
        });

    });
</script>
