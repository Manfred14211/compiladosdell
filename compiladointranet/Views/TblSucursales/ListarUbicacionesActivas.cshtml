@model IEnumerable<iveCincoFrame.Models.CatUbicaciones>
<div class="d-flex justify-content-between mb-2">
    
    <div class="mb-3"><button type="button" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("CrearSucursal", "TblSucursales")'" style="box-shadow: 0 0.15rem 1.75rem 0 rgb(33 40 50 / 15%);">Agregar Sucursal</button></div>
    <h1>Sucursales</h1>
    <p class="text-white">.</p>
</div>
<table id="tblsucursales" class="table table-striped table-bordered table-sm" style="width:100%">
    <thead class="table-dark">
        <tr>
            <td class="d-none">IdCatUbicaciones</td>
            <td>Region</td>
            <td>Codigo</td>
            <td>Nombre</td>
            <td>Contacto</td>
            <td>Descripcion</td>
            <td>CodigoNomobre</td>
            <td>Estado</td>
            <td>Ubicacion</td>
            <td>Acciones</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="d-none">@Html.DisplayFor(modelItem => item.idCatUbicaciones)</td>
                <td>@Html.DisplayFor(modelItem => item.CatRegiones.descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.codigo)</td>
                <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="align-middle me-2 fas fa-fw fa-address-book"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <div class="dropdown-item"><i class="align-middle me-2 fas fa-fw fa-phone-square"></i> Telefono: @Html.DisplayFor(modelItem => item.telefono)</div>
                                <div class="dropdown-item"><i class="align-middle me-2 fas fa-fw fa-envelope"></i> Correo: @Html.DisplayFor(modelItem => item.correo)</div>
                                <div class="dropdown-item"><i class="align-middle me-2 fas fa-fw fa-envelope"></i> Correo: @Html.DisplayFor(modelItem => item.codigoSucrusalSigue)</div>
                            </li>
                        </ul>
                    </div>
                </td>
                <td>@Html.DisplayFor(modelItem => item.descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.codigoNombre)</td>
                <td>@Html.DisplayFor(modelItem => item.CatEstados.descripcion)</td>

                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="align-middle me-2 fas fa-fw fa-map-marker-alt"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <div class="dropdown-item"><i class="align-middle me-2 fas fa-fw fa-map-signs"></i> Direccion: @Html.DisplayFor(modelItem => item.direccion)</div>
                                <div class="dropdown-item"><i class="align-middle me-2 fas fa-fw fa-genderless"></i> Departamento: @Html.DisplayFor(modelItem => item.CatDepartamentosRepublicas.descripcion)</div>
                                <div class="dropdown-item"><i class="align-middle me-2 fas fa-fw fa-genderless"></i> Municipio: @Html.DisplayFor(modelItem => item.MunicipiosRepublicas.descripcion)</div>
                                <div class="dropdown-item"><i class="align-middle me-2 fas fa-fw fa-genderless"></i> Lugar: @Html.DisplayFor(modelItem => item.CatLugares.descripcion)</div>
                            </li>
                        </ul>
                    </div>

                </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-warning dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="align-middle me-2 fas fa-fw fa-wrench"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li><button class="dropdown-item" id="editar-sucursar" codigoSucursal="@item.idCatUbicaciones"><span><i class="align-middle me-2 fas fa-fw fa-pen"></i></span>Editar</button></li>
                            <li><button class="dropdown-item" id="eliminar-sucursar" codigoSucursal="@item.idCatUbicaciones"><span><i class="align-middle me-2 fas fa-fw fa-minus-circle"></i></span>Desactivar</button></li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#tblsucursales').DataTable({
            language: {
                "decimal": "",
                "emptyTable": "No hay información",
                "info": "",
                "infoEmpty": "",
                "infoFiltered": "",
                "infoPostFix": "",
                "thousands": ",",
                "lengthMenu": "",
                "loadingRecords": "Cargando...",
                "processing": "Procesando...",
                "search": "Buscar:",
                "zeroRecords": "Sin resultados encontrados",
                "paginate": {
                    "first": "Primero",
                    "last": "Ultimo",
                    "next": "Siguiente",
                    "previous": "Anterior"
                }
            },
            responsive: true,
            ordering: false,
        });
    });
</script>

