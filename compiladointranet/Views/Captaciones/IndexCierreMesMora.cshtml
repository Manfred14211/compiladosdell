
@{
    ViewBag.Title = "IndexCierreMesMora";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="https://cdn.jsdelivr.net/gh/linways/table-to-excel@v1.0.4/dist/tableToExcel.js"></script>
<div class="row">
    @Html.Partial("_MensajeParcial")
    <div class="col-12">
        <div class="card">
            <div class="card-header mb-0">
                <div class="container">
                    <h1 class="fc-toolbar-title text-center">Reporte Cierre Mes Mora</h1>
                </div>
            </div>
            <div class="card-body">

                <button id="btnExport" class="btn btn-success" onclick="exportReportToExcel(this)">EXPORTA EXCEL</button>
                <br />
                <table id="tblCaptaciones" class="table table-striped table-bordered display nowrap" style="width:100%">
                    <thead class="table-dark">
                        <tr>
                            <td>Agencia</td>
                            <td>Enero</td>
                            <td>Febrero</td>
                            <td>Marzo</td>
                            <td>Abril</td>
                            <td>Mayo</td>
                            <td>Junio</td>
                            <td>Julio</td>
                            <td>Agosto</td>
                            <td>Septiembre</td>
                            <td>Octubre</td>
                            <td>Noviembre</td>
                            <td>Diciembre</td>
                        </tr>
                    </thead>
                    <tfoot align="right">
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

<script>

    function exportReportToExcel() {
        let table = document.getElementsByTagName("table"); // you can use document.getElementById('tableId') as well by providing id to the table tag
        TableToExcel.convert(table[0], { // html code may contain multiple tables so here we are refering to 1st table tag
            name: `Archivo.xlsx`, // fileName you could use any name
            sheet: {
                name: 'Sheet 1' // sheetName
            }
        });
    }
    $(document).ready(function () {
        $("#btnExport").click(function () {
            let table = document.getElementsByTagName("tblCaptaciones");
            TableToExcel.convert(table[0], { // html code may contain multiple tables so here we are refering to 1st table tag
                name: `Archivo.xlsx`, // fileName you could use any name
                sheet: {
                    name: 'Sheet 1' // sheetName
                }
            });
        });
    });



    var dataTable;

    $(document).ready(function () {
        loadDataTable();
    });


    function loadDataTable() {
         dataTable = $('#tblCaptaciones').DataTable({

            "ajax": {
                "url": "@Url.Action("GetCierreMesMora", "Captaciones")",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                { "data": "nombre" },
                { "data": "enero" },
                { "data": "febrero" },
                { "data": "marzo" },
                { "data": "abril" },
                { "data": "mayo" },
                { "data": "junio" },
                { "data": "julio" },
                { "data": "agosto" },
                { "data": "septiembre" },
                { "data": "octubre" },
                { "data": "noviembre" },
                { "data": "diciembre" }
            ],
             "footerCallback": function (tfoot, data, start, end, display) {
                 var api = this.api(), data;

                 // Remove the formatting to get integer data for summation
                 var intVal = function (i) {
                     return typeof i === 'string' ?
                         i.replace(/[\Q,]/g, '') * 1 :
                         typeof i === 'number' ?
                             i : 0;
                 };
                 ///var d = (intVal("Q1,298,570.7"))

                 //alert(d);


                 // computing column Total of the complete result
                 var enero = api
                     .column(1)
                     .data()
                     .reduce(function (a, b) {
                         return intVal(a) + intVal(b);
                     }, 0);
                 var febrero = api
                     .column(2)
                     .data()
                     .reduce(function (a, b) {
                         return intVal(a) + intVal(b);
                     }, 0);

                 var marzo = api
                     .column(3)
                     .data()
                     .reduce(function (a, b) {
                         return intVal(a) + intVal(b);
                     }, 0);

                 var abril = api
                     .column(4)
                     .data()
                     .reduce(function (a, b) {
                         return intVal(a) + intVal(b);
                     }, 0);

                 var mayo = api
                     .column(5)
                     .data()
                     .reduce(function (a, b) {
                         return intVal(a) + intVal(b);
                     }, 0);
                 var junio = api
                     .column(6)
                     .data()
                     .reduce(function (a, b) {
                         return intVal(a) + intVal(b);
                     }, 0);
                 var julio = api
                     .column(7)
                     .data()
                     .reduce(function (a, b) {
                         return intVal(a) + intVal(b);
                     }, 0);
                 var agosto = api
                     .column(8)
                     .data()
                     .reduce(function (a, b) {
                         return intVal(a) + intVal(b);
                     }, 0);
                 var septiembre = api
                     .column(9)
                     .data()
                     .reduce(function (a, b) {
                         return intVal(a) + intVal(b);
                     }, 0);
                 var octubre = api
                     .column(10)
                     .data()
                     .reduce(function (a, b) {
                         return intVal(a) + intVal(b);
                     }, 0);
                 var noviembre = api
                     .column(11)
                     .data()
                     .reduce(function (a, b) {
                         return intVal(a) + intVal(b);
                     }, 0);
                 var diciembre = api
                     .column(12)
                     .data()
                     .reduce(function (a, b) {
                         return intVal(a) + intVal(b);
                     }, 0);

                 const formateador = new Intl.NumberFormat("en", { style: "currency", "currency": "GTQ" });


                 $(api.column(0).footer()).html('Total');
                 $(api.column(1).footer()).html(formateador.format(enero));
                 $(api.column(2).footer()).html(formateador.format(febrero));
                 $(api.column(3).footer()).html(formateador.format(marzo));
                 $(api.column(4).footer()).html(formateador.format(abril));
                 $(api.column(5).footer()).html(formateador.format(mayo));
                 $(api.column(6).footer()).html(formateador.format(junio));
                 $(api.column(7).footer()).html(formateador.format(julio));
                 $(api.column(8).footer()).html(formateador.format(agosto));
                 $(api.column(9).footer()).html(formateador.format(septiembre));
                 $(api.column(10).footer()).html(formateador.format(octubre));
                 $(api.column(11).footer()).html(formateador.format(noviembre));
                 $(api.column(12).footer()).html(formateador.format(diciembre));

             },
            destroy: true,
            dom: 'Bfrtip',
            //buttons: [
            //    'excel','print'
            //],
            columnDefs: [{
                visible: false
            }],
            language: {
                "decimal": "",
                "emptyTable": "No hay información",
                "info": "Mostrando registros de _START_ al _END_ de un total de  _TOTAL_ registros",
                "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                "infoFiltered": "(filtrado de un total de _MAX_ registros)",
                "infoPostFix": "",
                "thousands": ",",
                "lengthMenu": "Mostrar _MENU_ Entradas",
                "loadingRecords": "Cargando...",
                "processing": "Procesando...",
                "search": "Buscar:",
                "searchPlaceholder": "Buscar registros",
                "zeroRecords": "Sin resultados encontrados",
                "paginate": {
                    "first": "Primero",
                    "last": "Ultimo",
                    "next": "Siguiente",
                    "previous": "Anterior"
                }
            },
            responsive: true,
            pageLength: 100

        });
    }
</script>



