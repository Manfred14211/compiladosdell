@model IEnumerable<iveCincoFrame.Models.Directorios.DirectoriosList>

@{
    ViewBag.Title = "ListarDirectoriosAdmin";
    Layout = null;
}
<div class="d-flex justify-content-between mb-2">
    <h2>Caracteristicas de Grabacion de las Sucursales</h2>
</div>




<table class="table table-hover table-sm" id="tbl-directorios">
    <thead class="table-dark">
        <tr>
            <th>
                #
            </th>
            <th>
                Nombres
            </th>
            <th>
                Departamento
            </th>
            <th>
                Puesto
            </th>
            <th>
                Telefono
            </th>
            <th>
                Telefonos Cooperativa
            </th>
            <th>
                Extension
            </th>
            <th>
                Correo
            </th>

        </tr>
    </thead>
    <tbody>
        @{var iterador = 1;}
        @foreach (var item in Model)
        {
            <tr>
            <td>
                @iterador
            </td>
            <td>
                @item.Nombres
            </td>
            <td>
                @item.Departamento
            </td>
            <td>
                @item.Puesto
            </td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a class="btn btn-primary" href="tel:+502 @item.Telefono">@item.Telefono</a>
                    @{string url = "https://wa.me/+502" + item.Telefono; }
                    <a class="btn btn-success" target="_blank" href="@url"><i class="align-middle me-2 fab fa-fw fa-whatsapp"></i></a>
                </div>

            </td>
            <td>
                <div class="dropdown-center">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="align-middle me-2 fas fa-fw fa-phone"></i>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="tel:+@item.TelefonoCooperativa">2214-2828</a></li>
                        <li><a class="dropdown-item" href="tel:+@item.TelefonoCooperativa">2214-2800</a></li>
                    </ul>
                </div>
            </td>
            <td>
                @item.NumeroExtension
            </td>
            <td>

                <div class="btn-group">
                    <button type="button" class="btn btn-danger"><i class="align-middle me-2 fas fa-fw fa-envelope"></i></button>
                    <button type="button" class="btn btn-danger dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="visually-hidden">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu">
                        @{string urlemail = "mailto:" + item.CorreoInstitucional;}
                        <li><a target="_blank" class="dropdown-item" href="@urlemail">@item.CorreoInstitucional</a></li>
                    </ul>
                </div>
            </td>

        </tr>
            iterador++;
        }
    </tbody>


</table>


<script>
    $(document).ready(function () {
        $('#tbl-directorios').DataTable({
            language: {
                "decimal": "",
                "emptyTable": "No hay información",
                "info": "",
                "infoEmpty": "",
                "infoFiltered": "",
                "infoPostFix": "",
                "thousands": ",",
                "lengthMenu": "",
                "loadingRecords": "Cargando...",
                "processing": "Procesando...",
                "search": "Buscar:",
                "zeroRecords": "Sin resultados encontrados",
                "paginate": {
                    "first": "Primero",
                    "last": "Ultimo",
                    "next": "Siguiente",
                    "previous": "Anterior"
                }
            },
            responsive: true
        });
    });
</script>



