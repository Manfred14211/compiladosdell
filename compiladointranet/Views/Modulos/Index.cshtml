
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-12">
        <div>
            <div class="card">
                <div class="card-body">
                    <div class="my-3">
                        <div id="transac-modulos" class="col-12">
                            @Html.Action("ListarModulosActivos")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
     $(document).ready(function () {
        $(document).on('click', '#agregar-modulo', function () {

            $.ajax({
                type: 'GET',
                url: '@Url.Action("CrearModulo", "Modulos")',
                beforeSend: function (response) {
                },
                success: function (response) {
                    $('#transac-modulos').html('');
                    $('#transac-modulos').html(response);

                },
            });
            return false;
        });
       $(document).on('click', '#GuardarModulo', function () {
            var Descripcion = $('#Descripcion').val();
            var Titulo = $('#Titulo').val();
            var Orden = $('#Orden').val();
            var idicono = $('#idicono').val();

           alert(Descripcion);
           alert(Titulo);
           alert(Orden);
           alert(idicono);
            var tblModulos = {
                descripcion: Descripcion,
                titulo: Titulo,
                ordenar: Orden,
                idCatIconos: idicono
            };




            //console.log(usuarios);
                $.ajax({
                    type: 'POST',
                    url:  '@Url.Action("GuardarModulo", "Modulos")',
                    data: tblModulos,
                    cache: false,
                    beforeSend: function (response) {
                    },
                    success: function (response) {
                        if (response == "ok") {
                            cargardetalle();
                            limpiar();
                            function toasterOptions() {
                                toastr.options = {
                                    "closeButton": false,
                                    "debug": false,
                                    "newestOnTop": false,
                                    "progressBar": true,
                                    "positionClass": "toast-bottom-right",
                                    "preventDuplicates": false,
                                    "onclick": null,
                                    "showDuration": "300",
                                    "hideDuration": "1000",
                                    "timeOut": "5000",
                                    "extendedTimeOut": "1000",
                                    "showEasing": "swing",
                                    "hideEasing": "linear",
                                    "showMethod": "fadeIn",
                                    "hideMethod": "fadeOut"
                                };
                            };
                            toasterOptions();
                            toastr.success('Sucursal agregada con exito');
                        }
                        else
                        {
                            function toasterOptions() {
                                toastr.options = {
                                    "closeButton": false,
                                    "debug": false,
                                    "newestOnTop": false,
                                    "progressBar": true,
                                    "positionClass": "toast-bottom-right",
                                    "preventDuplicates": false,
                                    "onclick": null,
                                    "showDuration": "300",
                                    "hideDuration": "1000",
                                    "timeOut": "5000",
                                    "extendedTimeOut": "1000",
                                    "showEasing": "swing",
                                    "hideEasing": "linear",
                                    "showMethod": "fadeIn",
                                    "hideMethod": "fadeOut"
                                };
                            };
                            toasterOptions();
                            toastr.error('Ocurrio un error al guardar la sucursal'+ response);

                        }
                    }
                });
            return false;

                         /*funsion listar sucursales*/
                 function cargardetalle() {
                         $.ajax({
                            type: 'GET',
                            url: '@Url.Action("ListarModulosActivos", "Modulos")',
                            beforeSend: function (response) {
                            },
                            success: function (response) {
                                $('#transac-modulos').html('');
                                $('#transac-modulos').html(response);

                            }
                         });
                          return false;
                 }


                    /*funsion limpiar*/
                function limpiar() {
                    $('#idCatRegiones').val("");
                    $('#codigo').val("");
                    $('#nombre').empty();
                    $('#direccion').val("");
                    $('#correo').val("");
                    $('#telefono').val("");
                    $('#descripcion').val("");
                    $('#codigoNombre').val("");
                    $('#idCatDepartamentosRepublicas').val("");
                    $('#idMunicipiosRepublicas').val("");
                    $('#idSucursal').val("");
                    $('#nombreTarjetaCredito').val("");
                    $('#idCatTipoUbicaciones').val("");
                }


        });

         $(document).on('click', '#editar-modulo', function () {

            var codigo = $(this).attr('codigoModulo');
            $.ajax({
                type: 'POST',
                url: '@Url.Action("EditarMdulo", "Modulos")',
                data: {
                    id: codigo
                },
                beforeSend: function (response) {
                },
                success: function (response) {
                    $('#transac-modulos').html('');
                    $('#transac-modulos').html(response);

                },
            });
            return false;
         });
         $(document).on('click', '#GuardarCambiosModulo', function () {
             var Descripcion = $('#Descripcion').val();
             var Titulo = $('#Titulo').val();
             var Orden = $('#Orden').val();
             var idicono = $('#idicono').val();
             var idTblModulos = $('#idTblModulos').val();
             alert(Descripcion);
             alert(Titulo);
             alert(Orden);
             alert(idicono);
             alert(idTblModulos);
             var tblModulos = {
                 descripcion: Descripcion,
                 titulo: Titulo,
                 ordenar: Orden,
                 idCatIconos: idicono,
                 idTblModulos: idTblModulos
             };
            //console.log(usuarios);
                $.ajax({
                    type: 'POST',
                    url:  '@Url.Action("GuardarCambios", "Modulos")',
                    data: tblModulos,
                    cache: false,
                    beforeSend: function (response) {
                    },
                    success: function (response) {
                        if (response == "ok") {
                            cargardetalle();
                            limpiar();
                            function toasterOptions() {
                                toastr.options = {
                                    "closeButton": false,
                                    "debug": false,
                                    "newestOnTop": false,
                                    "progressBar": true,
                                    "positionClass": "toast-bottom-right",
                                    "preventDuplicates": false,
                                    "onclick": null,
                                    "showDuration": "300",
                                    "hideDuration": "1000",
                                    "timeOut": "5000",
                                    "extendedTimeOut": "1000",
                                    "showEasing": "swing",
                                    "hideEasing": "linear",
                                    "showMethod": "fadeIn",
                                    "hideMethod": "fadeOut"
                                };
                            };
                            toasterOptions();
                            toastr.success('Modulo modificado con exito');
                        }
                        else
                        {
                            function toasterOptions() {
                                toastr.options = {
                                    "closeButton": false,
                                    "debug": false,
                                    "newestOnTop": false,
                                    "progressBar": true,
                                    "positionClass": "toast-bottom-right",
                                    "preventDuplicates": false,
                                    "onclick": null,
                                    "showDuration": "300",
                                    "hideDuration": "1000",
                                    "timeOut": "5000",
                                    "extendedTimeOut": "1000",
                                    "showEasing": "swing",
                                    "hideEasing": "linear",
                                    "showMethod": "fadeIn",
                                    "hideMethod": "fadeOut"
                                };
                            };
                            toasterOptions();
                            toastr.error('Ocurrio un error al modificar el modulo'+ response);

                        }
                    }
                });
            return false;

                         /*funsion listar sucursales*/
                 function cargardetalle() {
                         $.ajax({
                            type: 'GET',
                            url: '@Url.Action("ListarModulosActivos", "Modulos")',
                            beforeSend: function (response) {
                                cargar();
                            },
                            success: function (response) {
                                $('#transac-modulos').html('');
                                $('#transac-modulos').html(response);

                            }
                         });
                          return false;

                 }


                    /*funsion limpiar*/
                function limpiar() {
                    $('#Descripcion').val("");
                    $('#Titulo').val("");
                    $('#Orden').empty();
                    $('#idicono').val("");
                }

             function cargar() {
                 let timerInterval
                 Swal.fire({
                     title: 'Actualizando afiliaciones!',
                     html: 'Tiempo restante <b></b> espere profavor.',
                     timer: 1000,
                     timerProgressBar: true,
                     didOpen: () => {
                         Swal.showLoading()
                         const b = Swal.getHtmlContainer().querySelector('b')
                         timerInterval = setInterval(() => {
                             b.textContent = Swal.getTimerLeft()
                         }, 100)
                     },
                     willClose: () => {
                         clearInterval(timerInterval)
                     }
                 }).then((result) => {
                     /* Read more about handling dismissals below */
                     if (result.dismiss === Swal.DismissReason.timer) {
                         console.log('I was closed by the timer')
                     }
                 })
             }
         });
         $(document).on('click', '#eliminar-modulo', function () {

            var idTblModulo = $(this).attr('codigoModulo');

            var dataModulo = {
                "idTblModulos": idTblModulo
            };

            Swal.fire({
                icon: 'warning',
                title: '¿Desactivar este Modulo?',
                showConfirmButton: true,
                confirmButtonText: 'Desactivar',
                confirmButtonColor: '#3085d6',
                showCancelButton: true,
                cancelButtonText: 'CANCELAR',
                cancelButtonColor: '#d33',
                buttonsStyling: true,

            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("DeleteConfirmed", "Modulos")',
                        data: dataModulo,
                        success: function (response) {


                            if (response == "ok") {
                                function toasterOptions() {
                                    toastr.options = {
                                        "closeButton": false,
                                        "debug": false,
                                        "newestOnTop": false,
                                        "progressBar": true,
                                        "positionClass": "toast-bottom-right",
                                        "preventDuplicates": false,
                                        "onclick": null,
                                        "showDuration": "300",
                                        "hideDuration": "1000",
                                        "timeOut": "5000",
                                        "extendedTimeOut": "1000",
                                        "showEasing": "swing",
                                        "hideEasing": "linear",
                                        "showMethod": "fadeIn",
                                        "hideMethod": "fadeOut"
                                    };
                                };

                                toasterOptions();
                                toastr.success('El Modulo se desactivo con exito!');

                                cargardetalle();
                            }
                            else
                            {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Ocurrio un problema al desactivar esta modulo',
                                    text: response
                                })
                            }


                        }
                    });
                }
            });

            /*funsion listar usuarios*/
            function cargardetalle() {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("ListarModulosActivos", "Modulos")',
                beforeSend: function (response) {
                },
                success: function (response) {
                    cargar();
                    $('#transac-modulos').html('');
                    $('#transac-modulos').html(response);
                },
            });
            return false;
            }
            });
             function cargar() {
                 let timerInterval
                 Swal.fire({
                     title: 'Actualizando afiliaciones!',
                     html: 'Tiempo restante <b></b> espere profavor.',
                     timer: 1000,
                     timerProgressBar: true,
                     didOpen: () => {
                         Swal.showLoading()
                         const b = Swal.getHtmlContainer().querySelector('b')
                         timerInterval = setInterval(() => {
                             b.textContent = Swal.getTimerLeft()
                         }, 100)
                     },
                     willClose: () => {
                         clearInterval(timerInterval)
                     }
                 }).then((result) => {
                     /* Read more about handling dismissals below */
                     if (result.dismiss === Swal.DismissReason.timer) {
                         console.log('I was closed by the timer')
                     }
                 })
             }
     })
</script>