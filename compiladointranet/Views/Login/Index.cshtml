
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="author" content="Cooperativa Integral de Ahorro y Credito Cooitza R.L">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Sistema | Cooitza R.L</title>
    <!--jquery min-->
    <script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link href="~/CSS/Style.css" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="~/Content/img/avatars/pinoscooitza.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
</head>

<body>
    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-sm-center h-100">
                <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">

                    <div class="card shadow-lg mt-5">
                        <div class="card-body p-5">
                            <h1 class="fs-4 card-title fw-bold mb-4 text-center">INTRANET COOITZÁ</h1>
                            <div class="text-center">
                                <img src="~/Content/img/principal.png" alt="Cooitza" class="img-fluid" />

                            </div>
                            @using (Html.BeginForm("Autenticar", "Login", FormMethod.Post))
                            {
                                <div class="mb-3">
                                    <label class="mb-2 text-muted" for="email">Usuario</label>
                                    <input id="email" type="text" class="form-control" name="Usuario" value="" required autofocus>
                                    <div class="invalid-feedback">
                                        Usuario Incorrecto
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="mb-2 w-100">
                                        <label class="text-muted" for="password">Contraseña</label>
                                        @*<a href="forgot.html" class="float-end">
                                                Forgot Password?
                                            </a>*@
                                    </div>
                                    <input id="password" type="password" class="form-control" name="Clave" required>
                                    <div class="invalid-feedback">
                                        La contraseña es obligatoria
                                    </div>
                                </div>

                                <div class="d-flex align-items-center">
                                    <div class="form-check">
                                        <input type="checkbox" name="remember" id="remember" class="form-check-input">
                                        <label for="remember" class="form-check-label">Recordar</label>
                                    </div>
                                    <button type="submit" class="btn btn-primary ms-auto">
                                        Iniciar Sesion
                                    </button>
                                </div>
                                <div class="mx-0 mt-3">
                                    @Html.Partial("_MensajeParcial")
                                </div>

                            }
                        </div>

                        @*<div class="card-footer py-3 border-0">
                                <div class="text-center">
                                    Don't have an account? <a href="register.html" class="text-dark">Create One</a>
                                </div>
                            </div>*@
                    </div>
                    <div class="text-center mt-5 text-muted">
                        Copyright &copy; 2022 &mdash; Cooperativa Integral de Ahorro y Credito Itza, R.L
                    </div>
                </div>

            </div>
        </div>
    </section>
    <script src="~/Scripts/login.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
</body>
</html>

