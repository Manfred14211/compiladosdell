@model iveCincoFrame.Models.constanciasLaborales

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div>
            <div class="card">
                <div class="card-body">
                    <div class="my-3">

                        <div id="transac-directorios" class="col-12">

                            <div class="card-body mb-4" style="box-shadow: 0 0.15rem 1.75rem 0 rgb(33 40 50 / 15%);">
                                <div class="mb-3 text-start"><button type="button" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("IndexRrhh", "constanciasLaborales")'" style="box-shadow: 0 0.15rem 1.75rem 0 rgb(33 40 50 / 15%);"><i class="align-middle me-2 fas fa-fw fa-arrow-alt-circle-left"></i></button></div>
                                <div class="card-actions bg-success-dark text-white"><i class="align-middle me-2 fas fa-fw fa-check-circle"></i> Gestionar Solicitud</div>
                                <div class="text-center">
                                    <h3>Detalles de la Solicitud</h3>
                                </div>

                                @using (Html.BeginForm())
                                {
                                    @Html.Partial("_MensajeParcial")
                                    <!-- Form Row-->
                                    <div class="row gx-3 mb-3 d-none">
                                        <!-- Form Group (organization name)-->
                                        <div class="col-md-4" id="grupoOtros">
                                            @Html.Label("idConstancias", new { htmlAttributes = new { @class = "form-label" } })
                                            @Html.EditorFor(model => model.idConstancias, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>

                                    </div>
                                    <!-- Form Row-->
                                    <div class="row gx-3 mb-3">
                                        @if (!string.IsNullOrEmpty(Model.otroDestino))
                                        {
                                            <!-- Form Group (organization name)-->
                                            <div class="col-md-4" id="grupoOtros">
                                                @Html.Label("Destinatario de la Carta", new { htmlAttributes = new { @class = "form-label" } })
                                                @Html.EditorFor(model => model.otroDestino, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @disabled="disabled" } })
                                            </div>
                                        }
                                        else
                                        {
                                            <!-- Form Group (organization name)-->
                                            <div class="col-md-4" id="grupoCatAgencia">
                                                @Html.Label("Agencia destino", new { htmlAttributes = new { @class = "form-label" } })
                                                @Html.DropDownList("idAgencias", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                                            </div>
                                        }
                                        <!-- Form Group (organization name)-->
                                        <div class="col-md-4">
                                            @Html.Label("Codigo de Empleado", new { htmlAttributes = new { @class = "form-label" } })
                                            @Html.EditorFor(model => model.codigoEmpleado, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                        <!-- Form Group (organization name)-->
                                        <div class="col-md-4">
                                            @Html.Label("Nombre Completo", new { htmlAttributes = new { @class = "form-label" } })
                                            @Html.EditorFor(model => model.nombreCompleto, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                    </div>

                                    <!-- Form Row-->
                                    <div class="row gx-3 mb-3">
                                        <!-- Form Group (first name)-->
                                        <div class="col-md-4">
                                            @Html.Label("Dpi", new { htmlAttributes = new { @class = "form-label" } })
                                            @Html.EditorFor(model => model.dpi, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                        <!-- Form Group (last name)-->
                                        <div class="col-md-4">
                                            @Html.Label("inicio de Labores", new { htmlAttributes = new { @class = "form-label" } })
                                            @Html.EditorFor(model => model.inicioLabores, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                        <!-- Form Group (last name)-->
                                        <div class="col-md-4">
                                            @Html.Label("Salario Base", new { htmlAttributes = new { @class = "form-label" } })
                                            @Html.EditorFor(model => model.salarioBase, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                    </div>
                                    <!-- Form Row-->
                                    <div class="row gx-3 mb-3">
                                        <!-- Form Group (first name)-->
                                        <div class="col-md-4">
                                            @Html.Label("Bonificaciones de Ley", new { htmlAttributes = new { @class = "form-label" } })
                                            @Html.EditorFor(model => model.bonificacionesLey, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                        <!-- Form Group (first name)-->
                                        <div class="col-md-4">
                                            @Html.Label("Puesto", new { htmlAttributes = new { @class = "form-label" } })
                                            @Html.EditorFor(model => model.puesto, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                        <!-- Form Group (first name)-->
                                        <div class="col-md-4 d-none">
                                            @Html.Label("GeneroId", new { htmlAttributes = new { @class = "form-label" } })
                                            @Html.EditorFor(model => model.idCatGeneros, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                    </div>
                                    <!-- Form Row-->
                                    <div class="row gx-3 mb-3">
                                        <!-- Form Group (first name)-->
                                        <div class="col-md-4 d-none">
                                            @Html.Label("Estado de la Solcitud", new { htmlAttributes = new { @class = "form-label" } })
                                            @Html.DropDownList("idCatEstatosRrhh", null, htmlAttributes: new { @class = "form-control" })
                                        </div>
                                        <!-- Form Group (first name)-->
                                        <div class="col-md-4 d-none">
                                            @Html.Label("Estado de la Solcitud", new { htmlAttributes = new { @class = "form-label" } })
                                            @Html.DropDownList("idCatEstatosRrhh", null, htmlAttributes: new { @class = "form-control" })
                                        </div>
                                        <div class="mb-3">
                                            <label for="exampleFormControlTextarea1" class="form-label">Observaciones</label>
                                            <textarea class="form-control" id="comentarioRrhh" rows="3" name="comentarioRrhh"></textarea>
                                        </div>
                                    </div>
                                    <div class="container">
                                        <div class="row">

                                            <div class="col text-center">
                                                <div class="btn-group" role="group" aria-label="Basic example">
                                                    <a href="@Url.Action("Details/"+ Model.keyConstancia,"constanciasLaborales")" target="_blank" class="btn btn-primary btn-lg"><i class="align-middle me-2 fas fa-fw fa-receipt"></i>Detalle de la Carta</a>
                                                    <button type="submit" class="btn btn-success btn-lg" id="aprobar" value="Edit"> <i class="align-middle me-2 fas fa-fw fa-check"></i> Aprobar Solicitud</button>
                                                    <button type="submit" class="btn btn-danger btn-lg" id="rechazar" value="Edit"> <i class="align-middle me-2 fas fa-fw fa-ban"></i> Rechazar Solicitud</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }


                            </div>



                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    $(document).ready(function () {
        $(document).on('click', '#aprobar', function () {

            $('#idCatEstatosRrhh').val(2);
        });
        $(document).on('click', '#rechazar', function () {

            $('#idCatEstatosRrhh').val(3);
        });
    });
</script>