@{
    Layout = null;
}

<link href="~/CSS/StyleUpload.css" rel="stylesheet">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
<div class="container-drop">
    <div ondrop="dropHandler(event)" ondragover="dragOverHandler(event)" class="row borders rounded-3 m-2 p-5 gap-2">
        <span class="material-symbols-outlined">upload_file</span>
        <label class="text-center p-0 m-0 fs-3 fw-bold" for="uploadFile">Arrastra y suelta el archivo aquí</label>

        <div class="col-12 text-center">
            <label class="txt-color pb-2">Archivos Soportados: pdf </label>
            <input type="file"
                   class="form-control"
                   name="uploadFile"
                   id="uploadFile" accept=".PDF, .pdf" />
            <label class="txt-color pt-2">Tamaño máximo de archivo: 15 MB</label>
        </div>
        <div class="col-12 text-center">
            @Html.DropDownList("idCatDocumentosConvocatorias", ViewBag.idCatDocumentosConvocatorias as SelectList, "Seleccione una opción", new { @class = "form-select", @required = "required" })

        </div>
    </div>
</div>
<div class=" row mx-1">
    <button class="btn btn-primary btn-lg" id="enviar-Solicitud" style="box-shadow: 0 0.15rem 1.75rem 0 rgb(33 40 50 / 15%); background: #153d77;">Cargar Archivo</button>
</div>

