@model iveCincoFrame.Models.tblbitacorapremora

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-12">
        <div>
            <div class="card">
                <div class="card-body">
                    <div class="my-3">

                        <div id="transac-directorios" class="col-12">

                            @using (Html.BeginForm())
                            {
                                <div class="mb-3"><button type="button" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("Details", "tblPremoras", new { id = ViewBag.id })'" style="box-shadow: 0 0.15rem 1.75rem 0 rgb(33 40 50 / 15%); background: #0c4899 !important;"><i class="align-middle me-2 fas fa-fw fa-arrow-alt-circle-left"></i></button></div>
               
                                <div class="card-actions bg-success-dark text-white"><i class="align-middle me-2 fas fa-fw fa-exclamation-triangle"></i> Nuevo Seguimiento</div>
                                <!-- Account details card-->
                                <div class="card mb-4">
                                    <div class="card-header" style="background-color: rgba(33, 40, 50, 0.03);">
                                        <div class="container text-center">
                                            <h3 class="text-primary" style="color: #0c4899 !important;">Bitacora de seguimiento al Caso</h3>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <form>
                                            <!-- Form Group (username)-->
                                            <div class="mb-3">
                                                <label class="" for="inputUsername">Caso:</label>
                                                <input class="form-control" id="inputUsername" type="text" value="@ViewBag.Nombre" readonly>
                                            </div>
                                            <!-- Form Row-->
                                            <div class="row gx-3 mb-3">
                                                <!-- Form Group (first name)-->
                                                <div class="col-md-6">
                                                    <label class="" for="inputFirstName">Cuenta</label>
                                                    <input class="form-control" id="inputFirstName" type="text" value="@ViewBag.Cuenta" readonly>
                                                </div>
                                                <!-- Form Group (last name)-->
                                                <div class="col-md-6">
                                                    <label class="" for="inputLastName">Telefono</label>
                                                    <input class="form-control" id="inputLastName" type="text" value="@ViewBag.Telefono" readonly>
                                                </div>
                                            </div>
                                            <!-- Form Row        -->
                                            <div class="row gx-3 mb-3">
                                                <!-- Form Group (organization name)-->
                                                <div class="col-md-6">
                                                    <label class="" for="inputOrgName">Pago Minimo</label>
                                                    <input class="form-control" id="inputOrgName" type="text" value="@ViewBag.Minimo" readonly>
                                                </div>
                                                <!-- Form Group (location)-->
                                                <div class="col-md-6">
                                                    <label class="" for="inputLocation">Saldo</label>
                                                    <input class="form-control" id="inputLocation" type="text" value="@ViewBag.Saldo" readonly>
                                                </div>
                                            </div>
                                            <!-- Form Group (email address)-->
                                            <div class="mb-3">
                                                <label class="" for="inputEmailAddress">Visacuotas</label>
                                                <input class="form-control" id="inputEmailAddress" type="email" value="@ViewBag.Visa" readonly>
                                            </div>
                                            <!-- Form Row-->
                                            <div class="row gx-3 mb-3">
                                                <!-- Form Group (phone number)-->
                                                <div class="col-md-6">
                                                    <label class="" for="inputPhone">Dpi</label>
                                                    <input class="form-control" id="inputPhone" type="tel" value="@ViewBag.Dpi" readonly>
                                                </div>
                                            </div>
                                            <hr />
                                            <!-- Form Row-->
                                            <div class="row gx-3 mb-3">
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-md-10 d-none">
                                                @Html.LabelFor(model => model.idtblpremora, "idtblpremora", htmlAttributes: new { @class = "control-label col-md-2" })
                                                <input type="text" value="@ViewBag.id" name="idtblpremora" id="idtblpremora" />
                                            </div>
                                            <!-- Form Row-->
                                            <div class="row gx-3 mb-3">
                                                <!-- Form Group (phone number)-->
                                                <div class="col-md-12">
                                                    <label class="" for="idcatestadoscallcenter">Estado del seguimiento</label>
                                                    @Html.DropDownListFor(m => m.idcatestadoscallcenter, ViewBag.idCatOrigen as SelectList, "--Seleccione una opcion--", new { @class = "form-select" })
                                                    @Html.ValidationMessageFor(model => model.idcatestadoscallcenter, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <!-- Form Row-->
                                            <div class="row gx-3 mb-3">
                                                <!-- Form Group (phone number)-->
                                                <div class="col-md-12">
                                                    <label class="" for="observacion">Observaciones</label>
                                                    @Html.TextAreaFor(m => m.observacion, new { @class = "form-control", @rows = 3 })
                                                    @Html.ValidationMessageFor(model => model.observacion, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="row">
                                                <button class="btn btn-primary" value="Create" style="background-color: #153d77"><i class="align-middle me-2 fas fa-fw fa-check"></i> Guardar Seguimiento</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#idcatestadoscallcenter option:eq(1)').attr('disabled', true);
    });
</script>


