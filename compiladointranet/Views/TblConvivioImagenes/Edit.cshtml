@model iveCincoFrame.Models.TblConvivioImagenes

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div>
            <div class="card">
                <div class="card-body">
                    <div class="my-3">

                        <div id="transac-directorios" class="col-12">

                            @using (Html.BeginForm())
                            {


                                <div class="form-horizontal">
                                    <h4>TblConvivioImagenes Gestionar Imagenes</h4>
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.idTblConvivioImagenes)

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                                        </div>
                                    </div>





                                    <div class="form-group">
                                        <label>Si es 1 es imagen de publicidad</label>
                                        <label>Si es 2 es imagen de publicada por comunicacion</label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.idTblUsuarioModifica, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.idTblUsuarioModifica, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label>Si colocas 2, se publica en la pantalla</label> <div class="col-md-10">
                                           
                                            @Html.DropDownList("idCatEstados", null, htmlAttributes: new { @class = "form-select" })
                                            @Html.ValidationMessageFor(model => model.idCatEstados, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Save" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                            }

                            <div>
                                @Html.ActionLink("Back to List", "Index")
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
