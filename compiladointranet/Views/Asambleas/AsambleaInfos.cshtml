    Layout = null;
}

<meta http-equiv="Refresh" content="30; url='https://api.cooitza.gt/sistema/Asambleas/AsambleaInfos'" />
@*<meta http-equiv="Refresh" content="30; url='http://localhost:63817/Asambleas/AsambleaInfos'" />*@

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<meta http-equiv="X-UA-Compatible" content="ie=edge">*@
    <title>Asamblea Cooitzá</title>
    <!--jquery min-->
    <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">


    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/ac17241314.js" crossorigin="anonymous"></script>
    @*<link rel="stylesheet" href="~/Content/asamblea/styles/styles.css">*@
    @Styles.Render("~/Content/asamblea/styles/styles.css")
</head>
<body>

    <div class="contenedor">
        <div class="row">
            <div class="col-12 d-none">
                <div class="row text-center">
                    <h5 class="text-white">Bienvenidos! Puedes adquirir</h5>
                    <!-- Forma #1 -->
                    <h5 class="text-white"> tu <span class="typed"></span></h5>
                </div>
                <div class="row">
                    <div id="container-carrousel">
                        @*@Html.Action("InfoCarousel", "Asambleas")*@
                        <div class="row text-center mb-2">
                            <div class="container">
                                <section class="logo-carousel slider" data-arrows="true" id="logo-carousel" style="border-top: none;  border-bottom: none">
                                    <div class="slide"><img src="~/Content/img/principal.png" class="img-fluid" width="50"></div>
                                    <div class="slide"><img src="~/Content/img/TC2.jpeg" class="img-fluid" width="50"></div>
                                    <div class="slide"><img src="~/Content/img/TD.jpeg" class="img-fluid" width="50"></div>

                                </section>
                            </div>
                        </div>
                    </div>
                </div>
                @*<div class="row text-center mb-2">

                        <img src="~/Content/img/principal.png" class="img-fluid" />
                    </div>*@


            </div>
            <div class="col-12">
                <!-- Forma #1 -->
                <div class="text-center">
                    <h1 class="text-white">IV ASAMBLEA GENERAL ORDINARIA <br> ANUAL PERÍODO FISCAL 2022</h1>
                    <div class="row" id="row-titulo-total">
                        <div class="col-12">
                            @*<div class="card contenedor-icono">
                                <div class="card-body">
                                    <div class="text-center">*@
                            <h1 class="text-white">Total de Asociados Registrados</h1>
                            @*</div>
                                    </div>
                                </div>*@
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-4">

                            <h1 class="icono text-white"><span><i class="fa-solid fa-person"></i></span></h1>
                            <h1 class="" style="color:#ffce00;">@Model.Hombres</h1>
                            <h3 class="text-white">Hombres</h3>

                        </div>
                        <div class="col-4">

                            <div class="text-center">
                                <br>
                                <p style="font-size: 91px; color:#ffff;">@Model.Total</p>
                            </div>

                        </div>
                        <div class="col-4">

                            <h1 class="icono text-white"><span><i class="fa-solid fa-person-dress"></i></span></h1>
                            <h1 class="" style="color:#ffce00;">@Model.Mujeres</h1>
                            <h3 class="text-white">Mujeres</h3>
                        </div>

                    </div>



                </div>

                <div class="row text-center mt-5">
                    <div class="card-actions bg-success-dark">
                        <p class="text-white">
                            Departamento de Informatica  <img src="~/Content/img/ticsLogo.png" width="50" />
                        </p>
                    </div>
                </div>
            </div>

        </div>




    </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>
</html>



