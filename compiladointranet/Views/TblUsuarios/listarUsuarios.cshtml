@model IEnumerable<iveCincoFrame.Models.Usuarios.ListaUsuarios>

<table class="table table-hover table-sm" id="tablaUsuariosActivos">
    <thead class="table-dark small">
        <tr>
            <th>
                #
            </th>
            <th class="d-none">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
            <th>
               Fecha de Alta
            </th>
            <th>
                Fecha de Modificacion
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            @*<th>
                Sucursal
            </th>*@
            @*<th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ubicacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Departamento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EsGerente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JefeInmediato)
                </th>*@
            <th>
                Acciones
            </th>
        </tr>
    </thead>

    <tbody>
        @{var iterador = 1;}
        @foreach (var item in Model)
        {
            <tr>
                <td class="small">
                    @iterador
                </td>
                <td class="d-none">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="small">
                    @Html.DisplayFor(modelItem => item.Usuario)
                </td>
                <td class="small">
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td class="small">
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td class="small">
                    @Html.DisplayFor(modelItem => item.Rol)
                </td>
                <td class="small">
                    @Html.DisplayFor(modelItem => item.FechaCreacion)
                </td>
                <td class="small">
                    @Html.DisplayFor(modelItem => item.FechaModificacion)
                </td>
                <td class="small">
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                @*<td class="small">
                    @Html.DisplayFor(modelItem => item.Ubicacion)
                </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ubicacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Departamento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EsGerente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JefeInmediato)
                    </td>*@
                <td>
                    <div class="dropdown">
                        <button class="btn btn-warning dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="align-middle me-2 fas fa-fw fa-wrench"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li><button class="dropdown-item editarUsuario" codigo="@item.Id"><span><i class="align-middle me-2 fas fa-fw fa-pen"></i></span>Editar</button></li>
                            @if (item.IdCatEstadosUsuario == 1)
                            {
                                <li><button class="dropdown-item eliminarUsuario" codigo="@item.Id"><span><i class="align-middle me-2 fas fa-fw fa-minus-circle"></i></span>Desactivar</button></li>
                            }
                            else
                            {
                                <li><button class="dropdown-item activarUsuario" codigo="@item.Id"><span><i class="align-middle me-2 fas fa-fw fa-check-circle"></i></span>Activar</button></li>
                            }

                        </ul>
                    </div>
                </td>
            </tr>
            iterador++;
        }
    </tbody>

</table>

<script>
    $(document).ready(function () {


        $('#tablaUsuariosActivos').DataTable({
            language: {
                "decimal": "",
                "emptyTable": "No hay información",
                "info": "",
                "infoEmpty": "",
                "infoFiltered": "",
                "infoPostFix": "",
                "thousands": ",",
                "lengthMenu": "",
                "loadingRecords": "Cargando...",
                "processing": "Procesando...",
                "search": "Buscar:",
                "zeroRecords": "Sin resultados encontrados",
                "paginate": {
                    "first": "Primero",
                    "last": "Ultimo",
                    "next": "Siguiente",
                    "previous": "Anterior"
                }
            },
            responsive: true
        });




    });

</script>