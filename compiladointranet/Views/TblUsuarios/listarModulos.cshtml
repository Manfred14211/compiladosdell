@model iveCincoFrame.Models.Usuarios.ListaModulosRol

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<div class="d-flex justify-content-between mb-2">
    <div class="mb-3"><button type="button" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("Index", "TblRoles")'" style="box-shadow: 0 0.15rem 1.75rem 0 rgb(33 40 50 / 15%);"><i class="align-middle me-2 fas fa-fw fa-arrow-alt-circle-left"></i></button></div>
    <h1>Modulos del Rol</h1>
    <p class="text-white">.</p>
</div>

<div class="card" style="box-shadow: 0 0.15rem 1.75rem 0 rgb(33 40 50 / 15%);">
    <div class="row card-body">
        <label for="idSubmodulos" class="form-label">Agregue Modulos al Rol</label>
        <div class="input-group mb-3">
            <div class="col-10">

                @Html.DropDownList("idTblmodulos", null, htmlAttributes: new { @class = "form-select" })
            </div>
            <div class="col-2">
                <button class="btn btn-primary agregar-modulos">Agregar</button>
            </div>
        </div>



    </div>
    <div class="container d-none">

        <input type="text" class="form-control" id="codigoRolAgregar" value="@Model.idRol" />
    </div>
</div>
<div class="card" style="box-shadow: 0 0.15rem 1.75rem 0 rgb(33 40 50 / 15%);">
    <div class="card-header" style="background-color: #fafafa; ">
        <!--Tabs-->
        <ul class="nav nav-tabs" id="myTab" role="tablist" style="border-color: #e0e0e0;">
            <li class="nav-item" role="presentation">
                <button class="nav-link active"  id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Modulos Activos</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Modulos Inactivos</button>
            </li>
            <li class="nav-item d-none" role="presentation">
                <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Contact</button>
            </li>
        </ul>
        <!--fin -->
    </div>
    <div class="card-body border-0">
        <table class="table table-striped table-hover table-sm">
            <thead>
                <tr>
                    <th></th>
                    <th class="d-none">
                        idRol
                    </th>
                    <th class="d-none">
                        idModulo
                    </th>
                    <th>

                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{int i = 1;}
                @foreach (var item in Model.modulos)
                {

                    <tr>
                        <td>
                            @i
                        </td>
                        <td class="d-none">
                            @Html.DisplayFor(modelItem => item.IdRol)
                        </td>
                        <td class="d-none">
                            @Html.DisplayFor(modelItem => item.IdModulo)
                        </td>
                        <td class="mx-2">
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>

                            <button type="button" class="btn btn-success" id="Permisos" codigoModulo="@item.IdModulo" codigoRol="@item.IdRol"><span><i class="align-middle me-2 fas fa-fw fa-lock"></i></span>Permisos</button>
                            <button type="button" class="btn btn-danger eliminarRol" codigoModulo="@item.IdModulo" codigoRol="@item.IdRol"><span><i class="align-middle me-2 fas fa-fw fa-trash-alt"></i></span>Eliminar</button>
                        </td>
                    </tr>
                    i++;
                 }
            </tbody>
        </table>
    </div>
</div>






